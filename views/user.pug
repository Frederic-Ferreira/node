html
  head
    title='Update profile'
    style  
      include style.css 
  body
  div#form-profile
    img(src="images/" + path)
    form(action="/profile", method="POST")
      input(type="text", name="name", placeholder=name) 
      input(type="text", name="email", placeholder=email)
      button(type="submit")="Update email/name"

  form#form-upload(action="/avatar", method="POST", enctype="multipart/form-data")
    input#my-files(type="file", name="image", accept="image/*") 
    button(type="submit")="Upload/Update avatar"

  form(action="/delete", method="POST") 
    button(type="submit")="Delete Profile"